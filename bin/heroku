#!/bin/bash

set -e

cat << EOF > .sequelizerc
var path = require('path');

module.exports = {
    'config':          path.resolve('config.json'),
    'migrations-path': path.resolve('lib', 'migrations'),
    'models-path':     path.resolve('lib', 'models'),
    'url':             process.env.DATABASE_URL
}

EOF

cat << EOF > config.json

{
  "production": {
  }
}

EOF
